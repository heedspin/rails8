<div class="product-comments-list">
<% product_comments.each do |product_comment| %>
  <div class="product-comment">
    <p><strong><%= product_comment.author_name %>:</strong></p>
    <%= product_comment.content %>
    <p><em>Posted on <%= product_comment.created_at.strftime("%B %d, %Y") %></em></p>
    <% if authenticated? %>
      <p><%= link_to 'Edit', edit_product_product_comment_path(@product, product_comment) %></p>
      <%= button_to 'Delete', [@product, product_comment], method: :delete, data: { turbo_confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>